@model CoreEntity.ShowTiming
@{
    ViewData["Title"] = "EditShow";
}

<div> 
    <a asp-controller="ShowTiming" asp-action="ShowTimingEntry">Back to Show Entry</a>
    <center><h1>Welcome to Show Edit Session</h1></center>
<hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Show Entry</h2>
    <div class=" form-group">
        <label>Movie ID</label>
        <input type="text" asp-for="MId" class="form-control" placeholder="enter movie id" required />
    </div>

     <div class=" form-group">
        <label>Theater ID</label>
        <input type="text" asp-for="TId" class="form-control" placeholder="enter theater id" required />
    </div>

     <div class=" form-group">
        <label>Show Time</label>
        <input type="datetime-local" asp-for="ShowTime" class="form-control" placeholder="enter show time" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
                <div class="alert alert-success">
            @ViewBag.message
                </div>
    }
    else if (ViewBag.status == "Error")
    {
               <div class="alert alert-danger">
            @ViewBag.message
              </div>
    }
</form>


