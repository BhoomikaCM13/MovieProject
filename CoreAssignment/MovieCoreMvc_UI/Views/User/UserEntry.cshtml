@model CoreEntity.User

@{
    ViewData["Title"] = "UserEntry";
}

<div>
    <hr />
    <a asp-controller="User" asp-action="Index">Hello</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>User Entry</h2>
    <div class=" form-group">
        <label>User Name</label>
        <input type="text" asp-for="UserName" class="form-control" placeholder="enter user name" required />
    </div>


    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
            <div class="alert alert-success">
            @ViewBag.message
            </div>
    }
    else if (ViewBag.status == "Error")
    {
           <div class="alert alert-danger">
            @ViewBag.message
          </div>
    }
</form>


