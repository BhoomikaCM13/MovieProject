@model CoreEntity.Booking
@{
    ViewData["Title"] = "BookingEntry";
}

<div>
    <hr />
    <a asp-controller="Booking" asp-action="Index">Booo</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Booking Entry</h2>
    <div class=" form-group">
        <label>Movie Name</label>
        <input type="text" asp-for="MovieName" class="form-control" placeholder="enter movie name" required />
    </div>

     <div class=" form-group">
        <label>your Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="enter ypur name" required />
    </div>


    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
            <div class="alert alert-success">
            @ViewBag.message
            </div>
    }
    else if (ViewBag.status == "Error")
    {
           <div class="alert alert-danger">
            @ViewBag.message
          </div>
    }
</form>


