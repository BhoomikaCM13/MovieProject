@model CoreEntity.Booking


<div> 
    <a asp-controller="Booking" asp-action="BookingEntry">Back to Booking Entry</a>
    <center><h1>Welcome to Booking Delete Section</h1></center>
<hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking Entry</h2>
    <div class=" form-group">
        <label>Booking ID</label>
        <input type="text" asp-for="Bid" class="form-control" placeholder="enter booking id" required />
    </div>
   <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }

</form>