@model CoreEntity.Movie


<div> 
    <a asp-controller="Movie" asp-action="MovieEntry">Back to Movie Entry</a>
    <center><h1>Welcome to Movie Delete Section</h1></center>
<hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2>
    <div class=" form-group">
        <label>MovieID</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="enter movie id" required />
    </div>
   <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>