@model CoreEntity.Movie


<div> 
    <a asp-controller="Movie" asp-action="MovieEntry">Back to Movie Entry</a>
    <center><h1>Welcome to Movie Edit Session</h1></center>
<hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2>
    <div class=" form-group">
        <label>Movie Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="enter movie name" required />
    </div>

     <div class=" form-group">
        <label>Movie Description</label>
        <input type="text" asp-for="MovieDesc" class="form-control" placeholder="enter movie description" required />
    </div>

     <div class=" form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="MovieType" class="form-control" placeholder="enter movie type" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
                    <div class="alert alert-success">
            @ViewBag.message
                    </div>
    }
    else if (ViewBag.status == "Error")
    {
                   <div class="alert alert-danger">
            @ViewBag.message
                  </div>
    }
</form>



